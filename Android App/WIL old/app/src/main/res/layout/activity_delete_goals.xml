<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgb3"
    tools:context="com.a17001922.wil_app.homeScreen.deleteGoals">

    <Button
        android:id="@+id/btnBackDeleteGoals"
        android:layout_width="97dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/mybutton"
        android:text="Back"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btnDeleteGoal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDeleteGoal" />

    <Button
        android:id="@+id/btnDeleteGoal"
        android:layout_width="134dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/mybutton"
        android:text="Delete Goal"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cmbListOfUserGoals" />

    <ProgressBar
        android:id="@+id/pBarDeleteGoals"
        style="?android:attr/progressBarStyle"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="260dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/cmbListOfUserGoals"
        android:layout_width="414dp"
        android:layout_height="56dp"
        android:background="@color/colorBackground"
        app:layout_constraintTop_toBottomOf="@+id/imageView20"
        tools:layout_editor_absoluteX="-11dp" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="313dp"
        android:layout_height="201dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/deletegoalbubble" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="102dp"
        android:layout_height="144dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView19"
        app:srcCompat="@drawable/dog2" />

</android.support.constraint.ConstraintLayout>
