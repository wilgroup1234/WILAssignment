<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.a17001922.wil_app.homeScreen.viewGoalsFragment"
    android:background="@drawable/bgb4">

    <Button
        android:id="@+id/btnSaveGoalChanges"
        android:layout_width="134dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/mybutton"
        android:text="Save Changes" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/viewGoalsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnSaveGoalChanges"
        android:background="@drawable/bgb4"
        android:padding="4dp"
        android:scrollbars="vertical" />

    <ProgressBar
        android:id="@+id/pBarViewGoals"
        style="?android:attr/progressBarStyle"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnRegister"
        app:layout_constraintHorizontal_bias="0.498"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
