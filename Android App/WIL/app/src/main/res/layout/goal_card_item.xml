<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/imgIconCardView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-1dp"
            android:padding="5dp" />

        <TextView
            android:id="@+id/txtGoalNameCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/imgIconCardView"
            android:text="Line 1"
            android:textColor="@android:color/black"

            android:textSize="25sp" />

        <TextView
            android:id="@+id/txtGoalDescriptionCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Line 2"
            android:textColor="@android:color/secondary_text_dark"
            android:textSize="20sp"
            android:layout_below="@id/txtGoalNameCardView"
            android:layout_toEndOf="@id/imgIconCardView"

            />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cBoxIsCompleted"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/txtGoalDescriptionCardView"
            android:layout_toEndOf="@id/imgIconCardView" />


    </RelativeLayout>

</android.support.v7.widget.CardView>