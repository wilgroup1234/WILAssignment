<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgb3"
    tools:context="com.a17001922.wil_app.LoginScreen.ResetPassword">


    <EditText
        android:id="@+id/et_email2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/colorRegister"
        android:ems="10"
        android:hint="Email"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textColorHighlight="@color/colorButtonText"
        android:textColorHint="@color/colorBackground"
        android:textColorLink="@color/colorRegister"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView32"
        app:layout_constraintTop_toBottomOf="@+id/imageView31" />

    <Spinner
        android:id="@+id/cmbQuestions"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:background="@color/colorBackground"
        app:layout_constraintEnd_toStartOf="@+id/imageView32"
        app:layout_constraintTop_toBottomOf="@+id/et_email2" />

    <EditText
        android:id="@+id/et_newPassword"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/colorRegister"
        android:ems="10"
        android:hint="New Password:"
        android:inputType="textPassword"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textColorHighlight="@color/colorButtonText"
        android:textColorHint="@color/colorBackground"
        android:textColorLink="@color/colorRegister"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView32"
        app:layout_constraintTop_toBottomOf="@+id/et_answer2" />

    <EditText
        android:id="@+id/et_confirmnewPassword2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/colorRegister"
        android:ems="10"
        android:hint="Confirm Password:"
        android:inputType="textPassword"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textColorHighlight="@color/colorButtonText"
        android:textColorHint="@color/colorBackground"
        android:textColorLink="@color/colorRegister"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView32"
        app:layout_constraintTop_toBottomOf="@+id/et_newPassword" />

    <EditText
        android:id="@+id/et_answer2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/colorRegister"
        android:ems="10"
        android:hint="Answer"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textColorHighlight="@color/colorButtonText"
        android:textColorHint="@color/colorBackground"
        android:textColorLink="@color/colorRegister"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView32"
        app:layout_constraintTop_toBottomOf="@+id/cmbQuestions" />

    <Button
        android:id="@+id/btnSave"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="104dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/mybutton"
        android:text="Save"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageView32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_confirmnewPassword2" />

    <Button
        android:id="@+id/btnCancel"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="104dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="168dp"
        android:background="@drawable/mybutton"
        android:text="Cancel"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.203"
        app:layout_constraintStart_toEndOf="@+id/btnSave"
        app:layout_constraintTop_toBottomOf="@+id/imageView32" />

    <ImageView
        android:id="@+id/imageView31"
        android:layout_width="266dp"
        android:layout_height="209dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/resetpassbubble" />

    <ImageView
        android:id="@+id/imageView32"
        android:layout_width="83dp"
        android:layout_height="127dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView31"
        app:srcCompat="@drawable/dog3a" />

    <ProgressBar
        android:id="@+id/pBarResetPass"
        style="?android:attr/progressBarStyle"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007" />


</android.support.constraint.ConstraintLayout>
