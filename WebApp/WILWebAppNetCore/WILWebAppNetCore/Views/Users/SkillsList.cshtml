@model WILWebAppNetCore.Models.LifeSkills
@using WILWebAppNetCore.Classes

@{
    ViewData["Title"] = "Life Skills";
}

    <head>
        <link rel="stylesheet" href="~/css/Style2.css" />
    </head>

<h2 align="center">Life Skills</h2>

@{
    if (!StaticClass.errorMessage.Equals("NO_ERROR"))
    {
        <h2 class="text-danger">@ViewBag.Message</h2>
    }
}

<br>
<br>

<h3 align="center"> Enter information for the new Life Skill:</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="SkillsList">

            <div class="form-group">
                <label>Life Skill Name:</label>
                <input type="text" name="lifeSkillName" class=" form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add Life Skill" class="btnsubmit" />
            </div>

        </form>
    </div>
</div>

<br>
<br>

@{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LifeSkillId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LifeSkillName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (LifeSkills skills in ViewBag.LifeSkillsList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => skills.LifeSkillId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => skills.LifeSkillName)
                    </td>


                </tr>
            }
        </tbody>
    </table>


}


